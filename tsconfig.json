{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "lib": ["es2016", "dom", "es5"],
        "declarationDir": "./",
        "strict": true,
        "target": "ES6",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "./src/**/*.spec.ts"
    ]
}
